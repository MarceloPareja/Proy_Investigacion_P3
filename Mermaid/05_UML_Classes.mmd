classDiagram
    class User {
        id: int
        email: string
        nombre: string
        rol: UserRole
        afiliacion: string
        especialidad: string
        +getId()
        +getRole()
        +hasPermission()
    }
    
    class Paper {
        id: int
        titulo: string
        resumen: text
        autor_id: int
        archivo: string
        version: int
        estado: PaperStatus
        +getId()
        +getAuthor()
        +getReviews()
        +getStatus()
    }
    
    class Review {
        id: int
        paper_id: int
        revisor_id: int
        puntuacion: decimal
        comentarios: text
        recomendacion: enum
        +getId()
        +getReviewer()
        +getRecommendation()
    }
    
    class Decision {
        id: int
        paper_id: int
        decision: enum
        comentarios: text
        +getId()
        +getDecision()
        +requiresChanges()
    }
    
    class UserRole {
        <<enumeration>>
        ADMIN
        AUTHOR
        REVIEWER
    }
    
    class PaperStatus {
        <<enumeration>>
        DRAFT
        SUBMITTED
        REGISTERED
        UNDER_REVIEW
        EVALUATED
        ACCEPTED
        REJECTED
    }
    
    User "1" --> "*" Paper: crea
    User "1" --> "*" Review: realiza
    Paper "1" --> "*" Review: tiene
    Paper "1" --> "1" Decision: genera
    User --> UserRole: tiene
    Paper --> PaperStatus: tiene
