sequenceDiagram
    participant Admin
    participant Backend
    participant Service
    participant ReviewService as RevService
    participant DecisionRepo
    participant Notif
    
    Admin->>Backend: Ejecutar "Seleccionar Papers"
    activate Backend
    
    Backend->>Service: selectPapers(criteria)
    activate Service
    
    loop Para cada paper evaluado
        Service->>RevService: getReviewStatistics(paperId)
        activate RevService
        RevService-->>Service: {avgScore, recommendations}
        deactivate RevService
        
        Service->>Service: Aplica criterios<br/>de selección
        
        alt avgScore >= 7.0 && aceptaciones >= 2
            Service->>Service: decision = ACCEPTED
        else avgScore >= 5.5
            Service->>Service: decision = CHANGES_REQUIRED
        else
            Service->>Service: decision = REJECTED
        end
        
        Service->>DecisionRepo: save(decision)
    end
    
    Service-->>Backend: ✓ Selección completada
    deactivate Service
    
    Backend->>Notif: notifyAuthorsOfDecisions()
    activate Notif
    
    Notif->>Notif: Genera notificaciones<br/>por paper
    Notif-->>Backend: ✓ Notificaciones queued
    deactivate Notif
    
    Backend->>Admin: ✓ Selección completada<br/>Notificaciones enviadas
    deactivate Backend
